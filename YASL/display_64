#!yasl

{
	=:1 //Copy value
	1:2 //index
	1
	@ (
		2:= 2:= *
		= //Duplicate result
		1:= ==
		? (2:= 0) : (
			1:= >
			? (-1 0) : (
				1:2
				2:+:2
				1
			)
		)
	)
	2:#!
	1:#!
} sqrt

{
	=:1
	"A" >=
	1:= "Z" <=
	&&
	? (1:= "A" -:2) : (
		1:= "a" >=
		1:= "z" <=
		&&
		? (1:= "a" - 26 +:2) : (
			1:= "0" >=
			1:= "9" <=
			&&
			? (1:= "0" - 52 +:2) : (
				1:= "+" ==
				? 62:2 : (
					1:= "/" ==
					? 63:2
				)
			)
		)
	)
	1:!
} convert_b64_char //Convert b64 char to int value in stack 2

